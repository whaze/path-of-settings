{
    "name": "whaze/path-of-settings",
    "description": "A modern options page builder for WordPress with React and object-oriented architecture",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "keywords": ["wordpress", "settings", "options", "react", "admin"],
    "homepage": "https://github.com/whaze/path-of-settings",
    "authors": [
        {
            "name": "Jerome Buquet",
            "email": "jerome@whodunit.fr",
            "homepage": "https://whodunit.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PathOfSettings\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress src/",
        "phpcbf": "phpcbf --standard=WordPress src/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "support": {
        "issues": "https://github.com/whaze/path-of-settings/issues",
        "source": "https://github.com/whaze/path-of-settings"
    }
}